pipeline {
    agent {
        label 'linux-slave'
    }

    
    stages{
        stage('Build'){
            steps{
                sh "mvn clean package"
            }
            post{
                success{
                    echo "Archiving..."
                    archiveArtifacts artifacts: '**/target/*.war' 
                }
            }
        }

        stage('deployment'){
            steps{
              sh "scp -i ${env.JENKINS_HOME}/tomcat-demo.pem ${env.JENKINS_HOME}/jobs/${env.JOBNAME}/lastSuccessful/archive/webapp/target/*.war shady@${params.tomcat_dev}:/var/lib/tomcat8/webapps "                     
              }
        }
                
    }
    
}
